<Page
    x:Class="InvataGermana.EditLessonPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:InvataGermana"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    Loaded="Page_Loaded">

    <Grid Background="BlanchedAlmond">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <ListView x:Name="listViewLessons"
                  Margin="10"
                  BorderBrush="{ThemeResource SystemControlHyperlinkTextBrush}"
                  Grid.Column="0"
                  BorderThickness="2"
                  SelectionMode="Single"
                  SelectionChanged="listViewLessons_SelectionChanged">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock Foreground="CornflowerBlue"
                                   Margin="1"
                                   Text="{Binding ListCaption}"/>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Grid Grid.Column="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="2*"/>
                    <RowDefinition Height="7*"/>
                    <RowDefinition Height="7*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <StackPanel Margin="5"
                            Grid.Row="0"
                            Grid.Column="0"
                            Grid.ColumnSpan="2">
                    <TextBlock x:Name="tbNounsCount"
                                Margin="5,10,5,10"
                                FontWeight="Bold"
                                FontSize="16"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="8*"/>
                            <ColumnDefinition Width="3*"/>
                        </Grid.ColumnDefinitions>
                        <TextBox x:Name="tbLessonName"
                                 TextWrapping="NoWrap"
                                 Margin="0,10,0,10">
                        </TextBox>
                        <StackPanel Orientation="Horizontal"
                                    Grid.Column="1">
                            <Button x:Name="btnAddLesson"
                                    Content="Add lesson"
                                    Grid.Column="1"
                                    Margin="10"
                                    Click="btnAddLesson_Click"/>
                            <Button x:Name="btnDeleteLesson"
                                    Content="Delete"
                                    Grid.Column="2"
                                    Margin="10"
                                    Click="btnDeleteLesson_Click"/>
                            <Button x:Name="btnRenameLesson"
                                    Content="Rename"
                                    Grid.Column="2"
                                    Margin="10"
                                    Click="btnRenameLesson_Click"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
                <ListView x:Name="listLessonNouns"
                          Margin="5"
                          BorderBrush="{ThemeResource SystemControlHyperlinkTextBrush}"
                          Grid.Row="1"
                          Grid.Column="0"
                          BorderThickness="2"
                          SelectionMode="Single">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <StackPanel>
                                <TextBlock Foreground="{ThemeResource SystemBaseHighColor}"
                                           Text="{Binding ListCaption}"
                                           FontSize="12"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
                <ListView x:Name="listLessonWords"
                          Margin="5,5,5,10"
                          BorderBrush="{ThemeResource SystemControlHyperlinkTextBrush}"
                          Grid.Row="2"
                          Grid.Column="0"
                          BorderThickness="2"
                          SelectionMode="Single">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <StackPanel>
                                <TextBlock Foreground="{ThemeResource SystemBaseHighColor}"
                                           Text="{Binding ListCaption}"
                                           FontSize="12"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
                <StackPanel Grid.Row="1" Grid.Column="1">
                    <StackPanel Margin="0,0,0,10">
                        <TextBox x:Name="tbNouns" Margin="5"/>
                        <StackPanel Orientation="Horizontal">
                            <Button x:Name="btnDer"
                                Content="Add DER"
                                Margin="5"
                                Click="btnDer_Click"/>
                            <Button x:Name="btnDie"
                                Content="Add DIE"
                                Margin="5"
                                Click="btnDie_Click"/>
                            <Button x:Name="btnDas"
                                Content="Add DAS"
                                Margin="5"
                                Click="btnDas_Click"/>
                            <Button x:Name="btnDelete"
                                Content="Delete"
                                Margin="20,0,0,0"
                                Click="btnDelete_Click"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
                <StackPanel Grid.Row="2" Grid.Column="1">
                    <StackPanel Margin="0,0,0,10">
                        <TextBox x:Name="tbWords" Margin="5"/>
                        <StackPanel Orientation="Horizontal">
                            <Button x:Name="btnAddWord"
                                Content="Add word"
                                Margin="5"
                                Click="btnWord_Click"/>
                            <Button x:Name="btnDeleteWord"
                                Content="Delete"
                                Margin="5"
                                Click="btnDeleteWord_Click"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</Page>
