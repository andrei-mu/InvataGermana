                <Windows10FallCreatorsUpdate:NavigationViewItem Icon="Save" Content="Edit lesson" Tag="EditLessonPage" />
                <!--<Windows10FallCreatorsUpdate:NavigationViewItem Icon="Refresh" Content="Menu Item3" Tag="SamplePage3" />-->
                <!--<Windows10FallCreatorsUpdate:NavigationViewItem Icon="Download" Content="Menu Item4" Tag="SamplePage4" />-->
            </Windows10FallCreatorsUpdate:NavigationView.MenuItems>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="9*"/>
                </Grid.RowDefinitions>
            <Frame x:Name="contentFrame"
                   Grid.Row="1"/>
            </Grid>
        </Windows10FallCreatorsUpdate:NavigationView>
    </Grid>
</Page>
